<struts>

	<!-- <package name="account" namespace="/account" extends="struts-default"> -->
	<package name="account" namespace="/account" extends="json-default">
		<interceptors>
			<interceptor-stack name="fileStack">
			     <interceptor-ref name="fileUpload">
					<param name="maximumSize">200000</param>
					<param name="allowedTypes">image/png, image/jpeg, image/jpg</param>
				</interceptor-ref>
				<interceptor-ref name="defaultStack" />			

			</interceptor-stack>
		</interceptors>
		<action name="emailSignup" class="com.airogami.presentation.account.SignupAction"
			method="emailSignup">
			<interceptor-ref name="fileStack" />
			<result type="json" name="input">
				<param name="root">dataMap</param>
			</result>
			<result type="json" name="success">
				<param name="root">dataMap</param>
				<param name="excludeProperties">user.password</param>
			</result>
		</action>
		<action name="phoneSignup" class="com.airogami.presentation.account.SignupAction"
			method="phoneSignup">
			<interceptor-ref name="fileStack" />
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>

